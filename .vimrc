set nocompatible

set history=500

filetype off

filetype plugin on
filetype indent on

syntax on

set cursorline
set cursorcolumn

set number

set ruler

set visualbell

set encoding=utf-8

set modelines=0

set colorcolumn=80

set nowrap

set shiftwidth=4
set tabstop=4
set expandtab

set wildmenu

set wildmode=list:longest

set hidden

set ttyfast

set laststatus=2

set showmode

set showcmd
