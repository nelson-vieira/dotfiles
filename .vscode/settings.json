{
    "diffEditor.diffAlgorithm": "advanced",
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.wordWrap": "inherit",
    // "editor.fontFamily": "Consolas, 'Courier New', monospace", // Original font family
    "editor.acceptSuggestionOnEnter": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "block",
    "editor.detectIndentation": false,
    "editor.fontSize": 15,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.insertSpaces": true,
    "editor.maxTokenizationLineLength": 9000000,
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "all",
    "editor.showDeprecated": true,
    "editor.showUnused": true,
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "editor.trimAutoWhitespace": false,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "same",
    "emmet.includeLanguages": { "erb": "html" },
    "explorer.compactFolders": false,
    "explorer.confirmDelete": true,
    "files.associations": {
        ".env.example": "dotenv",
        ".env.development": "dotenv",
        ".env.production": "dotenv"
    },
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": false,
    "git.confirmSync": false,
    "html.format.indentInnerHtml": true,
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.showTabs": "multiple",
    "workbench.enableExperiments": false,
    "workbench.iconTheme": "vscode-icons",
    "[bibtex]": {
        "editor.rulers": [80]
    },
    "[dart]": {
        "editor.rulers": [80],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off"
    },
    "[latex]": {
        "editor.rulers": [80]
    },
    "[markdown]": {
        "editor.rulers": [80]
    },
    "[org]": {
        "editor.rulers": [80]
    },
    "[python]": {
        "editor.formatOnType": true
    },
    "[txt]": {
        "editor.rulers": [80]
    },
    "better-comments.highlightPlainText": true,
    "codeQL.telemetry.enableTelemetry": false,
    "dart.flutterHotReloadOnSave": "all",
    "dart.showTodos": true,
    "emulator.emulatorPathLinux": "~/Android/Sdk/emulator",
    "markdown.extension.preview.autoShowPreviewToSide": true,
    "markdown.extension.print.theme": "dark",
    "prettier.bracketSpacing": true,
    "prettier.endOfLine": "lf",
    "prettier.singleQuote": false,
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "none",
    "prettier.useTabs": false,
    "redhat.telemetry.enabled": false,
    "ruby.format": "rubocop",
    "ruby.rubocop.executePath": "",
    "ruby.rubocop.onSave": false,
    "svg.preview.autoOpen": false,
    "svg.preview.boundingBox": true,
    "svg.preview.transparencyGrid": false,
    "vite.autoStart": false,
}
